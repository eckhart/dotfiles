# Stop the madness
set -g utf8
set-window-option -g utf8 on
set -g status-utf8 on

# Use C-Space as prefix
unbind C-b
set -g prefix C-Space

# Different prefix for nested session
bind-key -n C-a send-prefix

# Vim keybindings
set -g mode-keys vi
set -g status-keys vi

# Make sure we use zsh and a usable terminal
set -g default-terminal "screen-256color"
set-option -g default-shell /bin/zsh

set-option -g allow-rename off

# Speed up commands
set-option -sg escape-time 0

# Start windows and panes at 1, not 0
set -g base-index 1
set -g pane-base-index 1

# Looks
set -g status on
set -g status-position top
set -g status-left ""
set -g status-right ""
#set -g status-justify centre
set -g status-justify left
#set -g status-bg black
#set -g status-fg white
#set -g status-attr bright
#set -g message-bg black
#set -g message-fg white
#set -g message-attr bright

set -g status-bg default
set -g status-fg default 

set -g message-fg black
set -g message-bg blue
set -g message-command-fg black
set -g message-command-bg blue

set -g pane-active-border-fg white
set -g pane-active-border-bg default
set -g pane-border-fg black
set -g pane-border-bg default

# window status
setw -g window-status-fg white
setw -g window-status-attr none
setw -g window-status-current-fg white 
setw -g window-status-current-bg default
setw -g window-status-current-attr none
setw -g window-status-format "#[bg=default,fg=brightblack]#I #[bg=default,fg=brightblack]#W "
setw -g window-status-current-format "#[bg=black,fg=brightwhite] #I #[bg=default,fg=brightwhite] #W "

# Seamless navigation between tmux panes and vim splits
bind -n C-h run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)g?(view|vim?)(diff)?$' && tmux send-keys C-h) || tmux select-pane -L"
bind -n C-j run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)g?(view|vim?)(diff)?$' && tmux send-keys C-j) || tmux select-pane -D"
bind -n C-k run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)g?(view|vim?)(diff)?$' && tmux send-keys C-k) || tmux select-pane -U"
bind -n C-l run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)g?(view|vim?)(diff)?$' && tmux send-keys C-l) || tmux select-pane -R"
bind -n C-\ run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)g?(view|vim?)(diff)?$' && tmux send-keys 'C-\\') || tmux select-pane -l" 

# Resize panes
bind -n S-Left resize-pane -L 5
bind -n S-Right resize-pane -R 5
bind -n S-Down resize-pane -D 5
bind -n S-Up resize-pane -U 5

# Splits and windows
unbind c
bind-key Enter command-prompt -p "Project:" "new-window -n '%%'"
bind-key c split-window -c "#{pane_current_path}"
bind-key C split-window -h -c "#{pane_current_path}"

# Other binds
bind-key r source ~/.tmux.conf \; display "Reloaded!"
bind-key X kill-session
bind-key m command-prompt "split-window 'exec man %%'"
bind-key i set-option status

# Copy mode
bind Space copy-mode
bind C-Space copy-mode

# Mouse on
set-option -g mouse-select-pane on
set-option -g mouse-select-window on
set-option -g mouse-resize-pane on
set-option -g mouse-utf8 on
set-window-option -g mode-mouse on
